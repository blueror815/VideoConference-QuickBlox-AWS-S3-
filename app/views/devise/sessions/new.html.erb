<div class="rootpage-background-image" style="padding-top: 1px; background: rgba(0, 0, 0, 0) url('/assets/back_img/brown-university.jpg') repeat scroll center center / cover; width: 100%; height: 100%">
  <fieldset class="signin-signup-fieldset">
  <h3 style="text-align: center">Log in</h3>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, :placeholder => 'Email', autofocus: true %>
    </div>

    <div class="field">
      <%= f.password_field :password, :placeholder => 'Password (8 characters minimum)', autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field" style="display: inline-block">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, :class => 'remember_me' %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", :class => 'button button-primary' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

  </fieldset>
</div>