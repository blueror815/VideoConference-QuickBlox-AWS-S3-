<%= form_for @institution do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, placeholder: 'Brown institution' %>

  <%= f.label :description %>
  <%= f.text_area :description, class: "redactor", placeholder: 'description' %>

  <%= f.label :city %>
  <%= f.text_field :city, placeholder: 'Providence' %>

  <%= f.label :state %>
  <%= f.text_field :state, placeholder: 'RI' %>

  <%= f.label :country %>
  <%= f.text_field :country, placeholder: 'US' %>

  <%= f.submit %>
<% end %>
