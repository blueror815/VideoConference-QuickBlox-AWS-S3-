<%= simple_form_for(@webinar) do |f| %>
  	<%= f.error_notification %>

  	<div class="form-group">
    	<%= f.input :name %>
    </div>

    <div class="form-group">
		  <%= f.label :participates %>

      <%= f.select :participates, User.all.collect{|user| [user.email, user.id]}, {}, :class => "chosen-select", :multiple =>true %>
    </div>
    </br>
    <div class="form-group">
      <%= f.label :filepath, 'Video' %>
      <br />
    	<%= f.file_field :filepath %>
    </div>

  	<div class="form-actions webinar-create">
    	<%= f.button :submit %>
  	</div>

<% end %>

<script type="text/javascript">
	$(function(){
	    var config = {
	        '.chosen-select': {},
	        '.chosen-select-deselect': { allow_single_deselect: true },
	        '.chosen-select-no-single': { disable_search_threshold: 10 },
	        '.chosen-select-no-results': { no_results_text: 'Oops, nothing found!' },
	        '.chosen-select-width': { width: "100%" }
    	}
	    for (var selector in config) {
	        $(selector).chosen(config[selector]);
	    }

	});
</script>
