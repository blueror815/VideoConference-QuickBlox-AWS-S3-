<div class="centered">
  <span class="bc-title"><%= "#{@review.user.email}'s review for #{@review.institution.name}" %></span>
  <div class = "small-10 small-centered columns content-box">
    <div class = "contents">
      <div class="rating"><%= @review.rating %></div>
      <div class="row">
        <ul class="vote">
          <li><%= link_to 'ðŸ”º', like_institution_program_review_path(@review.institution, @review.program, @review), method: :put %></li>
          <li class="votetext"><%= "Votes: #{@review.score}" %></li>
          <li><%= link_to 'ðŸ”»', dislike_institution_program_review_path(@review.institution, @review.program, @review), method: :put %></li>
        </ul>
        <div class="small-10 columns small-centered columns"><b><%= @review.user.email %></b></div>
        <div class="small-10 columns small-centered columns bc-title"><%= @review.title if @review.title %></div>
      </div>

      <div class="row">
        <div class="small-10 small-centered columns"><%= raw(@review.content) %></div>
      </div><br>

      <div class="row">
        <div class="small-10 small-centered columns"><%= @review.created_at %></div>
      </div>

      <div class="row">
          <% if @review.access_privilege(current_user) %>
            <br><%= link_to 'Delete Review', institution_program_review_path(@review.institution, @review.program, @review), method: :delete, class: "button alert" %>
          <% end %>
      </div>
    </div>
  </div>
</div>
