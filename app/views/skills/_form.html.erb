<%= form_for [@user, @skill] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :points %>
  <%= f.select :points, options_for_select([[1,1], [2,2], [3,3]]) %>

  <%= f.label :category %>
  <%= f.collection_select :category_id, Category.all, :id, :name %>

  <%= f.submit 'Add your skill', class: 'button tiny' %>
<% end %>
